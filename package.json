{
  "name": "eneos-sales-automation",
  "version": "1.0.0",
  "description": "Enterprise-grade Sales Automation System for ENEOS Thailand",
  "main": "dist/app.js",
  "scripts": {
    "dev": "tsx watch src/app.ts",
    "build": "tsc && node -e \"const fs=require('fs');const path=require('path');const dest='dist/assets/fonts';fs.mkdirSync(dest,{recursive:true});fs.copyFileSync('src/assets/fonts/THSarabunNew.ttf',path.join(dest,'THSarabunNew.ttf'))\"",
    "start": "node dist/app.js",
    "lint": "eslint src",
    "lint:fix": "eslint src --fix",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:ui": "vitest --ui",
    "deploy:railway": "railway up",
    "health": "curl -s http://localhost:3000/health | jq .",
    "test:load": "k6 run tests/load/health.js && k6 run tests/load/api-admin.js",
    "test:load:health": "k6 run tests/load/health.js",
    "test:load:api": "k6 run tests/load/api-admin.js",
    "test:load:webhook": "k6 run tests/load/webhook-brevo.js"
  },
  "keywords": [
    "sales-automation",
    "line-oa",
    "brevo",
    "gemini-ai",
    "google-sheets"
  ],
  "author": "ENEOS Thailand",
  "license": "UNLICENSED",
  "private": true,
  "engines": {
    "node": ">=20.0.0"
  },
  "dependencies": {
    "@google/generative-ai": "^0.21.0",
    "@line/bot-sdk": "^9.4.0",
    "@sentry/node": "^10.32.1",
    "axios": "^1.7.7",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "exceljs": "^4.4.0",
    "express": "^4.21.0",
    "express-rate-limit": "^7.4.1",
    "googleapis": "^144.0.0",
    "helmet": "^8.0.0",
    "ioredis": "^5.9.1",
    "json2csv": "^6.0.0-alpha.2",
    "pdfkit": "^0.17.2",
    "prom-client": "^15.1.3",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1",
    "winston": "^3.15.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.0",
    "@types/ioredis": "^4.28.10",
    "@types/json2csv": "^5.0.7",
    "@types/node": "^22.7.5",
    "@types/pdfkit": "^0.17.4",
    "@types/supertest": "^6.0.3",
    "@types/swagger-jsdoc": "^6.0.4",
    "@types/swagger-ui-express": "^4.1.8",
    "@typescript-eslint/eslint-plugin": "^8.8.1",
    "@typescript-eslint/parser": "^8.8.1",
    "@vitest/coverage-v8": "^2.1.9",
    "eslint": "^9.12.0",
    "globals": "^17.0.0",
    "supertest": "^7.2.2",
    "tsx": "^4.19.1",
    "typescript": "^5.6.3",
    "vitest": "^2.1.2"
  }
}
